{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["-s", "${file}"],
            "showReturnValue": true,
            "justMyCode": false
        },
        {
            "name": "Python: pytest-cov",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["--cov=.", "--cov-report", "term-missing", "tests/"],
            "showReturnValue": true,
            "justMyCode": false
        },
        {
            "name": "Python: App",
            "type": "python",
            "request": "launch",
            "program": "app.py",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: CLI run",
            "type": "python",
            "request": "launch",
            "program": "cli.py",
            "args": ["run"],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
